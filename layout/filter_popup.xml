<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:text="Set Filter"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="#d33606"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Select bhk:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#d33606"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/bhk_spinner"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Select Range"
        android:textSize="15dp"
        android:textColor="#d33606"/>

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/range_seekbar"
            android:max="50000000"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Type"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#d33606"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textColor="#d33606"
                        android:text="Bungalow"
                        android:id="@+id/bungalow"
                        android:layout_marginLeft="30dp"/>

                    <CheckBox
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:textColor="#d33606"
                        android:text="Villa"
                        android:id="@+id/villa"
                        android:layout_marginLeft="5dp"/>

                    <CheckBox
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:textColor="#d33606"
                        android:text="Flat"
                        android:id="@+id/flat"
                        android:layout_marginLeft="5dp"/>
                    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:textColor="#d33606"
                    android:text="Rent"
                    android:id="@+id/rent"
                    android:layout_marginLeft="30dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#d33606"
                    android:id="@+id/paying_guest"
                    android:text="Paying Guest"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_done"
                android:text="Done"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_width="70dp"
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="130dp"
                android:layout_marginBottom="15dp"
                android:layout_height="30dp"/>
        </LinearLayout>
</ScrollView>
</LinearLayout>
